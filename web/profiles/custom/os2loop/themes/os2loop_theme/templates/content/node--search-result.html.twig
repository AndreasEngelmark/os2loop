{% set node = elements['#node'] %}
<div class="search-result search-result--node search-result--node--{{ node.bundle|clean_class }} icon-list {{ node.bundle|clean_class }} d-flex w-100">
  <div class="d-block ml-30 w-100">
    <div class="d-flex justify-content-between align-items-start">
      <h2 class="h5 search-header"><a href="{{ url }}">{{ label }}</a></h2>
      <div class="text-sm ">{{ (node.createdtime|date("d-m-Y")) }}</div>
    </div>
    {% if (searchedComment.comment) %}
      <div class="search_api_excerpt border">
        <div class="text-sm">{{ searchedComment.comment.bundle == 'os2loop_question_answer' ? 'Reply'|t : 'Comment'|t }}:</div>
        {{ searchedComment.comment_text|raw }}
      </div>
    {% else %}
      <div class="search_api_excerpt mb-0">{{ elements['#search_api_excerpt']|raw }}</div>
    {% endif %}
    <div class="d-flex align-items-center">
      <span class="badge badge-primary badge-{{ node.getType|clean_class }}">{{ node.type.entity.label }}</span>
      {% if (node.os2loop_question_answers) %}
        <span class="d-flex align-items-center subject answer text-sm font-weight-bold">{{ node.get('os2loop_question_answers').comment_count }}</span>
      {% endif %}
      {% if (node.os2loop_post_comments) %}
        <span class="d-flex align-items-center subject comment text-sm font-weight-bold">{{ node.get('os2loop_post_comments').comment_count }}</span>
      {% endif %}
    </div>
  </div>
</div>

